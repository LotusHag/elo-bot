<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Custom Game Teams - <%= game.name %></title>
    <style>
        body {
            background-color: #013220;
            color: white;
            font-family: Arial, sans-serif;
        }
        .nav-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 10px;
            margin-bottom: 20px;
        }
        .nav-container a {
            padding: 10px;
            background-color: #333;
            border: 1px solid #555;
            text-decoration: none;
            color: white;
        }
        .nav-container a:hover {
            background-color: #555;
        }
        .team-container {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
        }
        .team {
            background-color: #333;
            padding: 20px;
            border-radius: 5px;
            width: 40%;
            text-align: center;
        }
        .team h2 {
            margin-bottom: 20px;
        }
        .player {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="nav-container">
        <div>
            <img src="/images/logo.png" alt="Logo" style="height: 50px; margin-right: 10px;">
            <a href="/">Home</a>
            <a href="/games/<%= game._id %>">Leaderboard</a>
            <a href="/games/<%= game._id %>/input">Submit Game Results</a>
            <a href="/games/<%= game._id %>/custom-game">Create Another Custom Game</a>
        </div>
        <div>
            <% if (user) { %>
                <span>Welcome, <%= user.username %>!</span>
                <a href="/auth/logout">Logout</a>
            <% } else { %>
                <a href="/auth/login">Login</a>
            <% } %>
        </div>
    </div>
    <h1>Custom Game Teams - <%= game.name %></h1>
    <div class="team-container">
        <div class="team">
            <h2>Blue Team (Avg. Elo: <%= Math.round(blueTeam.reduce((sum, player) => sum + player.elo, 0) / blueTeam.length) %>)</h2>
            <% blueTeam.forEach(player => { %>
                <div class="player"><%= player.name %> (<%= Math.round(player.elo) %>) - <%= player.role %></div>
            <% }) %>
        </div>
        <div class="team">
            <h2>Red Team (Avg. Elo: <%= Math.round(redTeam.reduce((sum, player) => sum + player.elo, 0) / redTeam.length) %>)</h2>
            <% redTeam.forEach(player => { %>
                <div class="player"><%= player.name %> (<%= Math.round(player.elo) %>) - <%= player.role %></div>
            <% }) %>
        </div>
    </div>
</body>
</html>
