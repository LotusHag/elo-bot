<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <style>
        body {
            background-color: #01133D;
            color: white;
            font-family: Arial, sans-serif;
        }
        .nav-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 10px;
            margin-bottom: 20px;
        }
        .nav-container a {
            padding: 10px;
            background-color: #333;
            border: 1px solid #555;
            text-decoration: none;
            color: white;
        }
        .nav-container a:hover {
            background-color: #555;
        }
        .games-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .game-card {
            background-color: #333;
            padding: 20px;
            border-radius: 5px;
            width: 200px;
            text-align: center;
        }
        .game-card a {
            color: #4CAF50;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="nav-container">
        <div>
            <img src="/images/logo.png" alt="Logo" style="height: 50px; margin-right: 10px;">
            <a href="/profile">Profile</a>
        </div>
        <div>
            <% if (user) { %>
                <span>Welcome, <%= user.username %>!</span>
                <a href="/auth/logout">Logout</a>
            <% } else { %>
                <a href="/auth/login">Login</a>
            <% } %>
        </div>
    </div>
    <h1>Select a Game</h1>
    <div class="games-list">
        <% games.forEach(game => { %>
            <div class="game-card">
                <h2><%= game.name %></h2>
                <p><%= game.category %></p> <!-- Display the game category here -->
                <a href="/games/<%= game._id %>">Go to <%= game.name %></a>
            </div>
        <% }) %>
    </div>
</body>
</html>
