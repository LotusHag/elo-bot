<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify Trackmania Runs</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #2c3e50;
            color: white;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 80%;
            margin: auto;
            overflow: hidden;
        }
        h1 {
            text-align: center;
            padding: 20px 0;
        }
        .verify-container {
            background-color: #34495e;
            color: white;
            padding: 2rem;
            border-radius: 0.5rem;
            max-width: 800px;
            margin: 2rem auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        .verify-container table {
            width: 100%;
            border-collapse: collapse;
        }
        .verify-container table th,
        .verify-container table td {
            padding: 1rem;
            border: 1px solid #444;
        }
        .verify-container button {
            padding: 0.5rem 1rem;
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 0.25rem;
            cursor: pointer;
        }
        .verify-container button:hover {
            background-color: #2980b9;
        }
        .verify-container .delete-btn {
            background-color: #e74c3c;
        }
        .verify-container .delete-btn:hover {
            background-color: #c0392b;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Verify Trackmania Runs</h1>
        <div class="verify-container">
            <table>
                <thead>
                    <tr>
                        <th>Player</th>
                        <th>Map</th>
                        <th>Time</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% runs.forEach(run => { %>
                        <tr>
                            <td><%= run.player %></td>
                            <td><%= run.map %></td>
                            <td><%= run.time %></td>
                            <td>
                                <form action="/games/<%= game._id %>/verify/<%= run._id %>?action=approve" method="POST" style="display:inline;">
                                    <button type="submit">Approve</button>
                                </form>
                                <form action="/games/<%= game._id %>/verify/<%= run._id %>?action=delete" method="POST" style="display:inline;">
                                    <button type="submit" class="delete-btn">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
