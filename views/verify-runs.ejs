<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify Trackmania Runs</title>
    <style>
        body {
            background-color: #01133D;
            color: white;
            font-family: Arial, sans-serif;
        }
        .nav-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 10px;
            margin-bottom: 20px;
        }
        .nav-container a {
            padding: 10px;
            background-color: #333;
            border: 1px solid #555;
            text-decoration: none;
            color: white;
        }
        .nav-container a:hover {
            background-color: #555;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid #555;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #333;
        }
        form {
            display: inline;
        }
    </style>
</head>
<body>
    <div class="nav-container">
        <div>
            <img src="/images/logo.png" alt="Logo" style="height: 50px; margin-right: 10px;">
            <a href="/">Home</a>
        </div>
        <div>
            <% if (user) { %>
                <span>Welcome, <%= user.username %>!</span>
                <a href="/auth/logout">Logout</a>
            <% } else { %>
                <a href="/auth/login">Login</a>
            <% } %>
        </div>
    </div>
    <h1>Verify Trackmania Runs</h1>
    <table>
        <thead>
            <tr>
                <th>Player</th>
                <th>Map</th>
                <th>Time</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% unverifiedRuns.forEach(run => { %>
                <tr>
                    <td><%= run.player.name %></td>
                    <td><%= run.map.name %></td>
                    <td><%= (run.time / 60000).toFixed(0) %>:<%= ((run.time % 60000) / 1000).toFixed(0) %>:<%= (run.time % 1000) %></td>
                    <td><%= run.date.toISOString().split('T')[0] %></td>
                    <td>
                        <form action="/verify" method="POST">
                            <input type="hidden" name="runId" value="<%= run._id %>">
                            <input type="hidden" name="action" value="approve">
                            <input type="submit" value="Approve">
                        </form>
                        <form action="/verify" method="POST">
                            <input type="hidden" name="runId" value="<%= run._id %>">
                            <input type="hidden" name="action" value="delete">
                            <input type="submit" value="Delete">
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
